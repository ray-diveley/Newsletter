<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{title}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body style="margin:0;background:#f5f7fb;font-family:Arial,Helvetica,sans-serif">
  <div style="max-width:1200px;margin:18px auto;padding:20px">
    <div style="background:#0b79ff;color:#fff;padding:12px 20px;border-radius:8px;text-align:center;font-size:20px;font-weight:700" id="top">
      <span style="margin-right:10px">🎆</span>
      {{title}}
    </div>

    <div style="height:16px"></div>

    {{#if yearEndSummary}}
    <!-- Year in Review - Unified section with border -->
    <table width="100%" cellpadding="0" cellspacing="0" border="0" style="margin-bottom:30px;border:3px solid #0b79ff;border-radius:8px;background:#f0f7ff">
      <tr>
        <td style="padding:30px 24px">

          <!-- Header -->
          <table width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
              <td style="text-align:center;padding-bottom:25px">
                <div style="font-size:28px;font-weight:700;color:#0b79ff">🎊 2025 Year in Review</div>
              </td>
            </tr>
          </table>

          <!-- Metric Cards - Single Row -->
          <table width="100%" cellpadding="0" cellspacing="0" border="0" style="margin-bottom:20px">
            <tr>
              <!-- Projects Card -->
              <td width="32%" valign="top" style="padding:0 1% 0 0">
                <table width="100%" cellpadding="0" cellspacing="0" border="0" style="background:#fff;border:2px solid #28a745;border-radius:6px">
                  <tr>
                    <td style="padding:20px">
                      <div style="font-size:11px;color:#888;font-weight:600;text-transform:uppercase;letter-spacing:0.5px;margin-bottom:10px">📊 Projects Delivered</div>
                      <div style="margin-bottom:8px">
                        <span style="font-size:36px;font-weight:700;color:#28a745">{{yearEndSummary.year2025}}</span>
                        <span style="font-size:16px;color:#aaa;margin-left:8px;text-decoration:line-through">{{yearEndSummary.year2024}}</span>
                      </div>
                      <div style="font-size:12px">
                        <span style="background:#28a745;color:#fff;padding:3px 8px;border-radius:10px;font-weight:700">↗ +{{yearEndSummary.growth}}%</span>
                        <span style="color:#999;margin-left:6px">vs 2024</span>
                      </div>
                    </td>
                  </tr>
                </table>
              </td>

              <!-- Bugs Card -->
              <td width="32%" valign="top" style="padding:0 1%">
                <table width="100%" cellpadding="0" cellspacing="0" border="0" style="background:#fff;border:2px solid #dc3545;border-radius:6px">
                  <tr>
                    <td style="padding:20px">
                      <div style="font-size:11px;color:#888;font-weight:600;text-transform:uppercase;letter-spacing:0.5px;margin-bottom:10px">🐛 Bugs Squashed</div>
                      <div style="margin-bottom:8px">
                        <span style="font-size:36px;font-weight:700;color:#dc3545">{{yearEndSummary.bugs2025}}</span>
                        <span style="font-size:16px;color:#aaa;margin-left:8px;text-decoration:line-through">{{yearEndSummary.bugs2024}}</span>
                      </div>
                      <div style="font-size:12px">
                        {{#if yearEndSummary.bugsChangePercent}}
                          {{#if (gt yearEndSummary.bugsChange 0)}}
                            <span style="background:#dc3545;color:#fff;padding:3px 8px;border-radius:10px;font-weight:700">↗ +{{yearEndSummary.bugsChangePercent}}%</span>
                          {{else}}
                            <span style="background:#28a745;color:#fff;padding:3px 8px;border-radius:10px;font-weight:700">↘ {{yearEndSummary.bugsChangePercent}}%</span>
                          {{/if}}
                        {{else}}
                          <span style="background:#6c757d;color:#fff;padding:3px 8px;border-radius:10px;font-weight:700">→ Same</span>
                        {{/if}}
                        <span style="color:#999;margin-left:6px">vs 2024</span>
                      </div>
                    </td>
                  </tr>
                </table>
              </td>

              <!-- Quick Wins Card -->
              <td width="32%" valign="top" style="padding:0 0 0 1%">
                <table width="100%" cellpadding="0" cellspacing="0" border="0" style="background:#fff;border:2px solid #ff9800;border-radius:6px">
                  <tr>
                    <td style="padding:20px">
                      <div style="font-size:11px;color:#888;font-weight:600;text-transform:uppercase;letter-spacing:0.5px;margin-bottom:10px">⚡ Quick Wins</div>
                      <div style="margin-bottom:8px">
                        <span style="font-size:36px;font-weight:700;color:#ff9800">{{yearEndSummary.quickWins2025}}</span>
                        <span style="font-size:16px;color:#aaa;margin-left:8px;text-decoration:line-through">{{yearEndSummary.quickWins2024}}</span>
                      </div>
                      <div style="font-size:12px">
                        {{#if yearEndSummary.quickWinsGrowth}}
                          <span style="background:#ff9800;color:#fff;padding:3px 8px;border-radius:10px;font-weight:700">↗ +{{yearEndSummary.quickWinsGrowth}}%</span>
                        {{else}}
                          <span style="background:#ff9800;color:#fff;padding:3px 8px;border-radius:10px;font-weight:700">New!</span>
                        {{/if}}
                        <span style="color:#999;margin-left:6px">vs 2024</span>
                      </div>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>

          {{#if yearEndSummary.topCategories2025}}
          <!-- Top Focus Areas of 2025 -->
          <table width="100%" cellpadding="0" cellspacing="0" border="0" style="background:#fff;border:1px solid #d0e7ff;border-radius:6px;margin-bottom:20px">
            <tr>
              <td style="padding:20px">
                <div style="font-weight:700;font-size:18px;color:#0b79ff;margin-bottom:15px">🎯 Top Focus Areas of 2025</div>
                <table width="100%" cellpadding="0" cellspacing="0" border="0">
                  <tr>
                    <td width="48%" valign="top" style="padding-right:2%">
                      <table width="100%" cellpadding="0" cellspacing="0" border="0">
                        {{#each yearEndSummary.topCategories2025}}
                        {{#if @first}}
                        <tr>
                          <td style="padding:6px 0;font-size:14px;color:#333;line-height:1.5">
                            <span style="color:#0b79ff;margin-right:6px">•</span>
                            <span style="font-weight:600;text-transform:capitalize">{{this.name}}</span>
                            <span style="color:#999"> ({{this.count}}, {{this.percent}}%)</span>
                          </td>
                        </tr>
                        {{else}}
                        {{#unless (eq @index 0)}}
                        {{#if (lt @index 5)}}
                        <tr>
                          <td style="padding:6px 0;font-size:14px;color:#333;line-height:1.5">
                            <span style="color:#0b79ff;margin-right:6px">•</span>
                            <span style="font-weight:600;text-transform:capitalize">{{this.name}}</span>
                            <span style="color:#999"> ({{this.count}}, {{this.percent}}%)</span>
                          </td>
                        </tr>
                        {{/if}}
                        {{/unless}}
                        {{/if}}
                        {{/each}}
                      </table>
                    </td>
                    <td width="48%" valign="top" style="padding-left:2%">
                      <table width="100%" cellpadding="0" cellspacing="0" border="0">
                        {{#each yearEndSummary.topCategories2025}}
                        {{#if (gte @index 5)}}
                        <tr>
                          <td style="padding:6px 0;font-size:14px;color:#333;line-height:1.5">
                            <span style="color:#0b79ff;margin-right:6px">•</span>
                            <span style="font-weight:600;text-transform:capitalize">{{this.name}}</span>
                            <span style="color:#999"> ({{this.count}}, {{this.percent}}%)</span>
                          </td>
                        </tr>
                        {{/if}}
                        {{/each}}
                      </table>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
          {{/if}}

          <!-- Narrative -->
          <table width="100%" cellpadding="0" cellspacing="0" border="0" style="background:#fff;border:1px solid #d0e7ff;border-radius:6px">
            <tr>
              <td style="padding:20px">
                <p style="margin:0;font-size:14px;line-height:1.7;color:#333">{{yearEndSummary.narrative}}</p>
              </td>
            </tr>
          </table>

        </td>
      </tr>
    </table>
    {{/if}}

    {{#if investmentOverview}}
    <table width="100%" cellpadding="0" cellspacing="0" border="0" style="background:#fff;border:1px solid #e6eef8;border-radius:6px;margin-bottom:20px">
      <tr>
        <td style="padding:22px 24px">
          <div style="color:#0b79ff;font-weight:700;font-size:16px;margin-bottom:14px">Impact &amp; Investment Overview</div>

          <table width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
              <!-- Left column: Investment Distribution -->
              <td width="45%" valign="top" style="padding-right:20px">
                <div style="font-weight:600;font-size:13px;color:#333;margin-bottom:12px">Engineering Investment Distribution</div>
                <table width="100%" cellpadding="0" cellspacing="0" border="0">
                  {{#each investmentOverview.categories}}
                  <tr>
                    <td style="padding:4px 0">
                      <table width="100%" cellpadding="0" cellspacing="0" border="0">
                        <tr>
                          <td width="140" style="font-size:12px;color:#555;padding-right:8px">{{label}}</td>
                          <td style="padding-right:8px">
                            <table width="100%" cellpadding="0" cellspacing="0" border="0" style="background:#e9ecef;height:18px;border-radius:3px">
                              <tr>
                                <td width="{{percent}}%" style="background:{{color}};height:18px;border-radius:3px 0 0 3px"></td>
                                <td style="background:#e9ecef"></td>
                              </tr>
                            </table>
                          </td>
                          <td width="45" style="font-size:12px;color:#555;text-align:right">{{percent}}%</td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                  {{/each}}
                </table>
                <div style="margin-top:12px;font-size:11px;color:#777">Based on {{investmentOverview.totalIssues}} active/featured items this period.</div>
              </td>

              <!-- Right column: Narrative -->
              <td width="55%" valign="top" style="padding-left:20px">
                <p style="margin:0;font-size:14px;line-height:1.6;color:#333">{{investmentOverview.narrative}}</p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
    {{/if}}

    <div style="height:16px"></div>

    {{#if tocLeft}}
    <div style="background:#fff;padding:18px;border-radius:8px;margin-top:16px;border:1px solid #e6eef8">
      <div style="color:#0b79ff;font-weight:700;margin-bottom:10px">In This Issue</div>
      <div style="display:flex;gap:24px">
        <div style="flex:1">
          {{#each tocLeft}}
              <div style="border-bottom:1px solid #f0f0f0;padding:6px 0;font-size:14px"><a href="#{{id}}" style="color:{{#if this.done}}#28a745{{else}}#333{{/if}};text-decoration:none;font-weight:{{#if this.done}}700{{else}}400{{/if}}">{{#if this.done}}✓ {{/if}}{{#if this.icon}}{{icon}} {{/if}}{{heading}}</a></div>
          {{/each}}
        </div>
        <div style="flex:1">
          {{#each tocRight}}
              <div style="border-bottom:1px solid #f0f0f0;padding:6px 0;font-size:14px"><a href="#{{id}}" style="color:{{#if this.done}}#28a745{{else}}#333{{/if}};text-decoration:none;font-weight:{{#if this.done}}700{{else}}400{{/if}}">{{#if this.done}}✓ {{/if}}{{#if this.icon}}{{icon}} {{/if}}{{heading}}</a></div>
          {{/each}}
        </div>
      </div>
    </div>
    {{else if toc}}
    <div style="background:#fff;padding:18px;border-radius:8px;margin-top:16px;border:1px solid #e6eef8">
      <div style="color:#0b79ff;font-weight:700;margin-bottom:10px">In This Issue</div>
      <div style="display:flex;gap:24px">
        <div style="flex:1">
          {{#each toc}}
            <div style="border-bottom:1px solid #f0f0f0;padding:6px 0;font-size:14px"><a href="#{{id}}" style="color:#333;text-decoration:none">{{#if icon}}{{icon}} {{/if}}{{heading}}</a></div>
          {{/each}}
        </div>
      </div>
    </div>
    {{/if}}

    <table style="width:100%;border-collapse:separate;border-spacing:20px 0;margin-top:18px">
      <tr>
        <td style="vertical-align:top;width:50%;padding:0">
          {{#each leftItems}}
            <div id="{{id}}" style="background:#fff;padding:20px;border-radius:8px;margin-bottom:20px;border-left:5px solid {{color}}">
              <div style="font-size:18px;color:#0b79ff;font-weight:700;margin-bottom:12px;display:flex;align-items:center;gap:10px"><span style="width:30px;height:30px;border-radius:6px;display:inline-flex;align-items:center;justify-content:center;color:#fff;font-size:16px;background:{{color}};margin-right:8px">{{icon}}</span> {{heading}}{{#if status}} — {{status}}{{/if}}</div>
              <div style="margin-bottom:10px"><span style="display:inline-block;background:{{categoryColor}};color:#fff;padding:3px 8px;border-radius:4px;font-size:11px;font-weight:600;letter-spacing:0.5px">{{categoryLabel}}</span></div>
              {{#if cardSummary}}<div style="font-size:14px;color:#333;line-height:1.6;margin-bottom:12px;font-style:italic">{{cardSummary}}</div>{{/if}}
              <div style="font-size:14px;color:#333;line-height:1.6;margin-bottom:12px">{{{body}}}</div>
              {{#if closingStatement}}<div style="font-family:Arial,sans-serif;font-size:14px;color:#333;font-weight:bold;margin-top:10px;margin-bottom:15px;">{{closingStatement}}</div>{{/if}}
              <div style="margin-top:10px;font-weight:700"><a href="#top" style="color:#0b79ff;text-decoration:none">Back to Top</a></div>
            </div>
          {{/each}}
        </td>
        <td style="vertical-align:top;width:50%;padding:0">
          {{#each rightItems}}
            <div id="{{id}}" style="background:#fff;padding:20px;border-radius:8px;margin-bottom:20px;border-left:5px solid {{color}}">
              <div style="font-size:18px;color:#0b79ff;font-weight:700;margin-bottom:12px;display:flex;align-items:center;gap:10px"><span style="width:30px;height:30px;border-radius:6px;display:inline-flex;align-items:center;justify-content:center;color:#fff;font-size:16px;background:{{color}};margin-right:8px">{{icon}}</span> {{heading}}{{#if status}} — {{status}}{{/if}}</div>
              <div style="margin-bottom:10px"><span style="display:inline-block;background:{{categoryColor}};color:#fff;padding:3px 8px;border-radius:4px;font-size:11px;font-weight:600;letter-spacing:0.5px">{{categoryLabel}}</span></div>
              {{#if cardSummary}}<div style="font-size:14px;color:#333;line-height:1.6;margin-bottom:12px;font-style:italic">{{cardSummary}}</div>{{/if}}
              <div style="font-size:14px;color:#333;line-height:1.6;margin-bottom:12px">{{{body}}}</div>
              {{#if closingStatement}}<div style="font-family:Arial,sans-serif;font-size:14px;color:#333;font-weight:bold;margin-top:10px;margin-bottom:15px;">{{closingStatement}}</div>{{/if}}
              <div style="margin-top:10px;font-weight:700"><a href="#top" style="color:#0b79ff;text-decoration:none">Back to Top</a></div>
            </div>
          {{/each}}
        </td>
      </tr>
    </table>

    {{#if quickWins}}
    <div id="quick-wins" style="background:#e6f3fa;padding:30px;border-radius:8px;border:2px solid #007bff;margin-top:20px;max-width:1200px;margin-left:auto;margin-right:auto">
      <h3 style="color:#007bff;margin-top:0;text-align:center">⚡ Quick Wins — {{date}}</h3>
      <p style="color:#333;margin-bottom:16px;text-align:left">{{quickWinsDescription}}</p>
      <ul style="text-align:left">
        {{#each quickWins}}
          <li style="color:#333"><strong>{{this.title}}</strong> — {{this.description}}</li>
        {{/each}}
      </ul>
      <div style="text-align:center;margin-top:12px;font-weight:700">Back to Top: <a href="#top" style="color:#007bff;text-decoration:none">Top</a></div>
    </div>
    {{/if}}

  </div>
</body>
</html>

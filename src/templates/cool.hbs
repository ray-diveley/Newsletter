<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>{{title}}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <link href="/styles/cool.css" rel="stylesheet" />
</head>
<body>
  <header class="header" id="top">
    <h1>ðŸš€ {{title}}</h1>
    <span class="badge-period">Edition â€¢ {{date}}</span>
  </header>

  <div class="grid">
    {{#if prioritiesSection}}
    <section class="panel priorities">
      <h2>ðŸŽ¯ {{prioritiesSection.heading}}</h2>
      <div class="content">{{prioritiesSection.content}}</div>
    </section>
    {{/if}}

    {{#if investmentOverview}}
    <section class="panel investment">
      <h2>ðŸ“Š Impact & Investment</h2>
      <div class="investment-layout">
        <div class="pie-wrap">
          <svg width="180" height="180" viewBox="0 0 120 120" role="img" aria-label="Engineering investment distribution">
            {{#each investmentOverview.piePaths}}
              <path d="{{d}}" fill="{{color}}" stroke="#0d1117" stroke-width="1" />
            {{/each}}
          </svg>
        </div>
        <div style="flex:1;min-width:260px">
          <p class="narrative">{{investmentOverview.narrative}}</p>
          <table class="cat-table">
            <thead>
              <tr><th>Category</th><th>Issues</th><th>%</th></tr>
            </thead>
            <tbody>
              {{#each investmentOverview.categories}}
              <tr>
                <td><span style="display:inline-block;width:10px;height:10px;background:{{color}};border-radius:3px;margin-right:6px;vertical-align:middle"></span>{{label}}</td>
                <td>{{count}}</td>
                <td>{{percent}}%</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <div style="margin-top:6px;font-size:11px;color:#647489">Based on {{investmentOverview.totalIssues}} highlighted items.</div>
        </div>
      </div>
    </section>
    {{/if}}
  </div>

  <main class="cards">
    {{#each leftItems}}
      <article id="{{id}}" class="card">
        <div class="head">
          <div class="icon-bubble">{{icon}}</div>
          <div style="flex:1">
            <h3>{{heading}}</h3>
            {{#if status}}<div class="status">Status: {{status}}{{#if this.done}}<span class="badge-done">DONE</span>{{/if}}</div>{{/if}}
          </div>
        </div>
        <div style="margin-bottom:10px"><span style="display:inline-block;background:{{categoryColor}};color:#fff;padding:4px 10px;border-radius:6px;font-size:11px;font-weight:600;letter-spacing:0.8px;text-transform:uppercase">{{categoryLabel}}</span></div>
        {{#if cardSummary}}<div class="summary">{{cardSummary}}</div>{{/if}}
        <div class="body">{{{body}}}</div>
        {{#if closingStatement}}<div class="closing">{{closingStatement}}</div>{{/if}}
        <div class="top-link"><a href="#top">Back to top</a></div>
      </article>
    {{/each}}

    {{#each rightItems}}
      <article id="{{id}}" class="card">
        <div class="head">
          <div class="icon-bubble">{{icon}}</div>
          <div style="flex:1">
            <h3>{{heading}}</h3>
            {{#if status}}<div class="status">Status: {{status}}{{#if this.done}}<span class="badge-done">DONE</span>{{/if}}</div>{{/if}}
          </div>
        </div>
        <div style="margin-bottom:10px"><span style="display:inline-block;background:{{categoryColor}};color:#fff;padding:4px 10px;border-radius:6px;font-size:11px;font-weight:600;letter-spacing:0.8px;text-transform:uppercase">{{categoryLabel}}</span></div>
        {{#if cardSummary}}<div class="summary">{{cardSummary}}</div>{{/if}}
        <div class="body">{{{body}}}</div>
        {{#if closingStatement}}<div class="closing">{{closingStatement}}</div>{{/if}}
        <div class="top-link"><a href="#top">Back to top</a></div>
      </article>
    {{/each}}
  </main>

  {{#if quickWins}}
  <section id="quick-wins" class="quick-wins">
    <h2>âš¡ Quick Wins â€” {{date}}</h2>
    <p>{{quickWinsDescription}}</p>
    <ul>
      {{#each quickWins}}
        <li><strong>{{this.title}}</strong> â€” {{this.description}}</li>
      {{/each}}
    </ul>
    <div class="top-link" style="margin-top:20px"><a href="#top">Back to top</a></div>
  </section>
  {{/if}}

  <footer class="footer">Generated internally â€¢ Theme: cool â€¢ Switch back by removing <code>?theme=cool</code></footer>
</body>
</html>
